{
  "builders": [
    {
      "type": "vmware-iso",

      "vm_name": "ubuntu2004",
      "vmx_data": {
        "ethernet0.pciSlotNumber": "32",
        "memsize": "{{ user `memory` }}",
        "numvcpus": "{{ user `cpus` }}"
      },
      "vmx_remove_ethernet_interfaces": true,

      "guest_os_type": "ubuntu-64",
      "name": "ubuntu2004",
      "iso_urls": [
        "iso/ubuntu-20.04.3-live-server-amd64.iso",
        "http://cutiefly.cubbington.eu.widgit.com/ubuntu-20.04.3-live-server-amd64.iso"
      ],
      "iso_checksum_type": "sha256",
      "iso_checksum": "f8e3086f3cea0fb3fefb29937ab5ed9d19e767079633960ccb50e76153effc98",
      "tools_upload_flavor": "linux",

      "http_directory": "subiquity/http",
      "output_directory": "output-{{ user `vm_name` }}-vmware-iso",

      "boot_wait": "5s",
      "boot_command": [
        "<enter><enter><f6><esc><wait> ",
        "autoinstall ds=nocloud-net;seedfrom=http://{{ .HTTPIP }}:{{ .HTTPPort }}/",
        "<enter><wait>"
      ],
      "shutdown_command": "shutdown -P now",

      "ssh_username": "ubuntu",
      "ssh_password": "ubuntu",
      "ssh_pty": true,
      "ssh_timeout": "20m",
      "ssh_handshake_attempts": "20"
    }
  ],

  "provisioners": [
    {
      "environment_vars": [
        "CLEANUP_PAUSE={{user `cleanup_pause`}}",
        "DEBIAN_FRONTEND=noninteractive",
        "DESKTOP={{user `desktop`}}",
        "UPDATE={{user `update`}}",
        "INSTALL_VAGRANT_KEY={{user `install_vagrant_key`}}",
        "SSH_USERNAME={{user `ssh_username`}}",
        "SSH_PASSWORD={{user `ssh_password`}}",
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "ftp_proxy={{user `ftp_proxy`}}",
        "rsync_proxy={{user `rsync_proxy`}}",
        "no_proxy={{user `no_proxy`}}"
      ],
      "execute_command": "echo '{{ user `ssh_password` }}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/netfs.sh",
        "scripts/ssh.sh",
        "scripts/sudoers.sh",
        "scripts/get_versions.sh",
        "scripts/minimize.sh"
      ],
      "type": "shell"
    },
    {
      "type": "file",
      "source": "/tmp/versions/",
      "destination": "./tmp",
      "direction": "download"
    },
    {
      "scripts": ["scripts/cleanup.sh"],
      "environment_vars": [
        "CLEANUP_PAUSE={{user `cleanup_pause`}}",
        "DEBIAN_FRONTEND=noninteractive",
        "DESKTOP={{user `desktop`}}",
        "UPDATE={{user `update`}}",
        "INSTALL_VAGRANT_KEY={{user `install_vagrant_key`}}",
        "SSH_USERNAME={{user `ssh_username`}}",
        "SSH_PASSWORD={{user `ssh_password`}}",
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "ftp_proxy={{user `ftp_proxy`}}",
        "rsync_proxy={{user `rsync_proxy`}}",
        "no_proxy={{user `no_proxy`}}"
      ],
      "execute_command": "echo '{{ user `ssh_password` }}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "type": "shell",
      "expect_disconnect": "true"
    }
  ],
  "variables": {
    "boot_command_prefix": "<enter><enter><f6><esc><wait>",
    "cleanup_pause": "",
    "cpus": "1",
    "custom_script": "custom-script.sh",
    "desktop": "false",
    "disk_size": "65536",
    "ftp_proxy": "{{env `ftp_proxy`}}",
    "headless": "false",
    "http_proxy": "{{env `http_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "install_vagrant_key": "true",
    "no_proxy": "{{env `no_proxy`}}",
    "parallels_guest_os_type": "ubuntu",
    "rsync_proxy": "{{env `rsync_proxy`}}",
    "hostname": "vagrant",
    "ssh_fullname": "vagrant",
    "ssh_password": "vagrant",
    "ssh_username": "vagrant",
    "update": "false",
    "vagrantfile_template": "",
    "version": "0.1.0",
    "virtualbox_guest_os_type": "Ubuntu_64",
    "vm_name": "ubuntu2004",
    "vmware_guest_os_type": "ubuntu-64"
  }
}
